<% if product = Product.find_by(id: product_id) %>
<% list_item= LineItem.find product_id %>
<% total_price= product.price * list_item.quantity %>
<% @order_total += total_price %>
  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      <%= product.price %>
    </td>
    <td>
      <%= list_item.quantity %>
    </td>
    <td>
      <%= total_price %>
    </td>
  </tr>
<% end %>
